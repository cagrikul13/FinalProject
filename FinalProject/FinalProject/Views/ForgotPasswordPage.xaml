<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.Views.ForgotPasswordPage"
             BackgroundImageSource="HomePageBackground.png">
    <ContentPage.Content>
        <StackLayout Padding="20" >
            <Image Source="myLogo.png" WidthRequest="180"></Image>
            <!-- Clicked eventler eklenecek -->
            <Label Text="Forgot your password?" TextColor="Black" Margin="0,0,0,0" FontFamily="Segoe UI" FontSize="25" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Label Text="Enter your e-mail address" TextColor="Black" FontFamily="Segoe UI" FontSize="18" FontAttributes="None" HorizontalTextAlignment="Center"/>
            <Frame Padding="0" CornerRadius="30" VerticalOptions="Center" HasShadow="True" Margin="20,5,20,0" Opacity="0.9">
                <Entry x:Name ="usernameEntry" 
                   Placeholder="Email or Username"
                   Text="{Binding Username}"
                   HorizontalOptions="CenterAndExpand" 
                   />
            </Frame>
            <Button Text="Send Login Link" 
                TextColor="White" 
                BackgroundColor="#4CE0B3" 
                WidthRequest="293" HeightRequest="43" 
                CornerRadius="25" 
                HorizontalOptions="Center" VerticalOptions="Center"
                Margin="0,5,0,0"
                />
            <Label Text="OR" TextColor="Black" FontFamily="Segoe UI" FontSize="18" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Button Text="Create New Account" 
                TextColor="White" 
                BackgroundColor="#FFAF87" 
                WidthRequest="293" HeightRequest="43" 
                CornerRadius="25" 
                HorizontalOptions="Center" VerticalOptions="Center"
                />
            <Button Text="Back to Login" 
                TextColor="White" 
                BackgroundColor="#137173" 
                WidthRequest="293" HeightRequest="43" 
                CornerRadius="25" 
                HorizontalOptions="Center" VerticalOptions="Center"
                Margin="0,5,0,0"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>