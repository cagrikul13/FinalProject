<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.MainPage">

    <StackLayout>
        <Label Text="Want to socialize?" TextColor="#685F64" FontFamily="Segoe UI" FontSize="18" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0,320,0,0"/>
        <Label Text="You're in the right app!" TextColor="#685F64" FontFamily="Segoe UI" FontSize="18" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
        <Button Text="Login" TextColor="White" 
                Margin="0,60,0,0" 
                WidthRequest="293" HeightRequest="43" 
                CornerRadius="25" 
                BackgroundColor="#4CE0B3" 
                HorizontalOptions="Center" VerticalOptions="Center"
                Clicked="loginBtn_Clicked"/>
        <Button Text="Sign Up" 
                TextColor="White" 
                BackgroundColor="#FFAF87" 
                WidthRequest="293" HeightRequest="43" 
                CornerRadius="25" 
                HorizontalOptions="Center" VerticalOptions="Center"
                Clicked="signUpBtn_Clicked"/>
    </StackLayout>

</ContentPage>
